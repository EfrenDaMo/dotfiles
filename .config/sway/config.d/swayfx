# waybar blur
layer_effects "waybar" {
	blur enable;
	blur_xray enable;
	blur_ignore_transperant enable;
	#corner_radius 20;
}

# rofi blur
layer_effects "rofi" {
	blur enable;
	blur_xray enable;
	shadows enable;
	corner_radius 20;
}

# General blur
blur enable
blur_xray disable
blur_passes 4
blur_radius 4
