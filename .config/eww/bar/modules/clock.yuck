(defpoll dt 
  :interval "1s" 
  "date +\"%-I:%M %p\""
)

(defwidget clock []
  (box 
    :class "clock"
    :orientation "h"
    :space-evenly false 
    (eventbox 
      :cursor "pointer" 
      :onclick "./bar/popup-menus/scripts/toggle-cal.sh" 
      (label 
        :text "${dt}" 
        :class "clock-text"
      )
    )
  )
)
