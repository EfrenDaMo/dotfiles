# Sets theme as tokyonight
theme = tokyonight_moon
# theme = /home/Efren/.cache/wal/colors-ghostty
background-opacity = .6

# Fonts config
font-size = 11
font-family = 0xProto Nerd Font

# Adds padding

# Mouse 
mouse-hide-while-typing = true

# Cursor 
cursor-style = block
cursor-style-blink = true
cursor-invert-fg-bg = true

# Window stuff
window-padding-y = 5
window-padding-x = 5, 0
window-padding-balance = true
#window-colorspace = "display-p3"
gtk-titlebar = true
gtk-wide-tabs = false
gtk-tabs-location = bottom

# Keybindings

# move around
keybind = alt+shift+k=goto_split:top
keybind = alt+shift+h=goto_split:left
keybind = alt+shift+l=goto_split:right
keybind = alt+shift+j=goto_split:bottom

# move to next or previous tab
keybind = ctrl+shift+h=previous_tab
keybind = ctrl+shift+l=next_tab

# move tab up or down in order
keybind = ctrl+shift+comma=move_tab:-1
keybind = ctrl+shift+period=move_tab:1

# create new tab 
keybind = ctrl+shift+t=new_tab

# copy and paste from clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# make new automatic split
keybind = ctrl+shift+enter=new_split:auto

# open inspector
keybind = alt+shift+i=inspector:toggle

# toggle split
keybind = alt+shift+m=toggle_split_zoom

# writes history into a file?
keybind = alt+shift+s=write_screen_file:open

# close ghostty window
keybind = alt+shift+q=close_surface

# Reload ghostty config
keybind = alt+shift+r=reload_config

# Other
#copy-on-select = clipboard
shell-integration-features = no-cursor, sudo

